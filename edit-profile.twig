<body>

    <div class="container mt-5">
        <div id="error"></div>
        <h1>Edit Profile</h1>

        {% if successMessage is not empty %}
            <div class="success-message">{{ successMessage }}</div>
        {% endif %}

        <form id="form" method="post" action="edit-profile.php">
            <div class="input-control">
                <span id="check-username"></span>
                <label for="username">Username:</label>
                <input type="text" class="form-control" name="username" id="username" onblur="checkUsername()" value="{{ user.username }}"> <!--calling the checkUsername method when the user enters a username-->
                <div id="loaderIcon"><img src="loader.gif" alt="Loading..."></div>
            </div>

            <div class="input-control">
                <span id="check-email"></span>
                <label for="email">Email:</label>
                <input type="email" class="form-control" name="email" id="email" onblur="checkEmail()" value="{{ user.email }}"> <!--calling the checkEmail method when the user enters an Email-->
                <div id="loaderIcon"><img src="loader.gif" alt="Loading..."></div>
            </div>

            <div>
                <label for="location">Location:</label>
                <select id="location" name="location" class="form-control">
                    <option value="Amsterdam" {{ (user.location == 'Amsterdam') ? 'selected' : '' }}>Amsterdam (GMT+1)</option>
                <option value="Athens" {{ (user.location == 'Athens') ? 'selected' : '' }}>Athens (GMT+2)</option>
                <option value="Belgrade" {{ (user.location == 'Belgrade') ? 'selected' : '' }}>Belgrade (GMT+1)</option>
                <option value="London" {{ (user.location == 'London') ? 'selected' : '' }}>London (GMT+0)</option>
                <option value="Rome" {{ (user.location == 'Rome') ? 'selected' : '' }}>Rome (GMT+1)</option>
                <option value="Valletta" {{ (user.location == 'Valletta') ? 'selected' : '' }}>Valletta (GMT+1)</option>
                </select>
            </div>

            <div>
                <label for="temperature_unit">Temperature Unit:</label>
                <select id="temperature_unit" name="temperature_unit" class="form-control">
                    <option value="celsius" {{ (user.temperature_unit == 'celsius') ? 'selected' : '' }}>Celsius</option>
                <option value="fahrenheit" {{ (user.temperature_unit == 'fahrenheit') ? 'selected' : '' }}>Fahrenheit</option>
                </select>
            </div>

            <button id="submit" value="submit" type="submit" class="btn btn-primary">Save Changes</button>
        </form>

        <div class="top-right-links">
            <a href="dashboard.php" class="btn btn-secondary">Go to Dashboard</a>
            <a href="logout.php" class="btn btn-secondary">Log Out</a>
            <a href="change_password.php" class="btn btn-secondary">Change Password</a>
            <a href="delete.php" class="btn btn-danger">Delete Account</a>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js">//this script is necessary for the below to work</script>

    <script>
        function checkEmail() { // the onblur="checkEmail()" calls this function when inputting in the email field
            jQuery.ajax({ // an ajax request using jquery is initiated
                url: "check-availability.php", //the ajax request is sent to this url
                data: 'email=' + $("#email").val(), //passing the email parameter's value from above with the request
                type: "POST", // passing the data in a POST request
                success: function (data) //once the ajax request is successful
                {
                    $("#check-email").html(data); //the span id="check-email" is passed the result of the email check from the server
                },

                error: function () { }
            })
        }
        // Same goal as the checkEmail() Function.
        function checkUsername() {
            jQuery.ajax({
                url: "check-availability.php",
                data: 'username=' + $("#username").val(),
                type: "POST",
                success: function (data) {
                    $("#check-username").html(data);
                },
                error: function () { }
            })
        }
    </script>
</body>

</html>
